{
  "compilerOptions": {
      "target": "es5"
    , "module": "commonjs"
    , "outDir": "dist"
    , "strict": true

    , "traceResolution": false
    , "noLib": false

    , "experimentalDecorators": true
    , "emitDecoratorMetadata": true
    , "declaration": true
    , "sourceMap": true
    , "noEmitOnError": true

    , "noUnusedLocals": true
    , "noImplicitReturns": true
    , "noFallthroughCasesInSwitch": true
    , "strictNullChecks": true

    , "noImplicitAny": true
    , "noUnusedParameters": true
    , "noImplicitThis": true

    , "skipLibCheck": true
    , "lib": [
      "esnext"
    ]
  }
  , "exclude": [
      "node_modules/"
    , "dist/"
    , "tests/fixtures/"
  ]
  , "include": [
       "bin/*.ts"
     , "examples/**/*.ts"
     , "scripts/**/*.ts"
     , "src/**/*.ts"
     , "tests/**/*.ts"
  ]
}
