{
  "name": "json-rpc-protocol",
  "version": "0.11.4",
  "license": "ISC",
  "description": "JSON-RPC 2 protocol messages parsing and formatting",
  "keywords": [
    "json",
    "json-rpc",
    "jsonrpc",
    "jsonrpc2",
    "rpc"
  ],
  "homepage": "https://github.com/JsCommunity/json-rpc-protocol",
  "bugs": "https://github.com/JsCommunity/json-rpc-protocol/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/JsCommunity/json-rpc-protocol.git"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": false,
  "main": "dist/",
  "typings": "dist/index.d.ts",
  "bin": {},
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "make-error": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^10.3.1",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.0",
    "dependency-check": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "rimraf": "^2.6.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc",
    "commitmsg": "npm test",
    "dev": "cross-env NODE_ENV=development tsc --watch",
    "dev-test": "jest --bail --watch",
    "lint": "tslint --project tsconfig.json && tsc --noEmit",
    "pretest": "npm run lint",
    "posttest": "dependency-check ./package.json",
    "prebuild": "rimraf dist/",
    "predev": "npm run prebuild",
    "prepare": "npm run build",
    "test": "jest"
  },
  "babel": {
    "env": {
      "test": {
        "ignore": null
      }
    },
    "ignore": "*.spec.js",
    "plugins": [
      "lodash",
      "transform-export-extensions"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4,
            "uglify": true
          }
        }
      ],
      "stage-3"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
